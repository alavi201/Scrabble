              a(href='/about') About Us
    block head
      nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                h2 Scrabble
            .navbar-collapse
                ul.navbar-right
                    form(method='POST',action='')
                            .ui.stacked.segment
                                .field
                                    .ui.input
                                        input(type="text", name="username", placeholder="Username")
