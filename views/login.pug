extends layout

block content
  
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                h2 logo
            .navbar-collapse
                ul.navbar-right
                    form.ui.large.form(method='POST')
                            .ui.stacked.segment
                                .field
                                    .ui.input
                                        input(type="text", name="email", placeholder="E-mail address")
                                        input(type="password",  name="password", placeholder="Password")
                                .ui.fluid.large.teal.submit.button Login
                            
    .container-fluid.scrollable
        .right-section
            h1 Sign Up!
            .column
                input(type="text", name="username", placeholder="Username")
            .column
               input(type="text", name="email", placeholder="E-mail address") 
            .column
               input(type="password", name="password", placeholder="Password") 
            .column
               input(type="password", name="confirmPassword", placeholder="Password") 
            .column
                a(href='#') Sign Up
        .left-section
            img(src="/images/scrabble.jpg", alt="scrabble board")
